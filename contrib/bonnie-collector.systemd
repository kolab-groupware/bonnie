[Unit]
Description=Wallace Content Filter
After=syslog.target network.target

[Service]
Type=forking
PIDFile=/run/bonnie-collector/bonnie-collector.pid
User=kolab
Group=kolab
EnvironmentFile=/etc/sysconfig/bonnie-collector
ExecStart=/usr/sbin/bonnie-collector $FLAGS --pid-file /run/bonnie-collector/bonnie-collector.pid
ExecReload=/bin/kill -HUP $MAINPID
ExecStop=/bin/kill -TERM $MAINPID

[Install]
WantedBy=multi-user.target

