[Unit]
Description=Wallace Content Filter
After=syslog.target network.target

[Service]
Type=forking
PIDFile=/run/bonnie-worker/bonnie-worker.pid
User=kolab
Group=kolab
EnvironmentFile=/etc/sysconfig/bonnie-worker
ExecStart=/usr/sbin/bonnie-worker $FLAGS --pid-file /run/bonnie-worker/bonnie-worker.pid
ExecReload=/bin/kill -HUP $MAINPID
ExecStop=/bin/kill -TERM $MAINPID

[Install]
WantedBy=multi-user.target

